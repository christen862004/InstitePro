@model List<Employee>
@{
    ViewData["Title"] = "Index";
    Dictionary<string, string> dic = new Dictionary<string, string>();
    dic["id"] = "1";
    dic["name"] = "asdas";
}

<h1>Index</h1>
<a href="/Employee/NEw">NEw</a>
@Html.ActionLink("Add","New","Employee")

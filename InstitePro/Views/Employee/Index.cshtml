<table class="table table-bordered table-hover">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a asp-action="Details" asp-controller="Employee"
                asp-route-id="@item.Id" asp-route-name="Ahmed" asp-all-route-data="dic">New</a>
            </td>
            <td><a href="/Employee/Edit/@item.Id">Edit</a></td>
        </tr>
    }
</table>